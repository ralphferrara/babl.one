/*||=-=-=-=-=-=-=-=-=--=-=-=-=-==-=-=-=-=-=-=-=-=-=-=-=-=--=-=-=-=-==-=-=-=-=-=-=-=-=-=-=-=-=--=-=-=-=-==-=-=-=-=-=-=-=-=-=-=-=-=--=-=-=-||
//|| babl.one :: tsconfig.json
//|| TypeScript Configuration - Compiler settings for core module
//||=-=-=-=-=-=-=-=-=--=-=-=-=-==-=-=-=-=-=-=-=-=-=-=-=-=--=-=-=-=-==-=-=-=-=-=-=-=-=-=-=-=-=--=-=-=-=-==-=-=-=-=-=-=-=-=-=-=-=-=--=-=-=-||*/

{
      "compilerOptions": {
            "target"             : "ES2022",
            "module"             : "ESNext",
            "moduleResolution"   : "node",
            "declaration"        : true,
            "outDir"             : "dist",
            "exclude"            : ["dist", "node_modules"],
            "strict"             : true,
            "esModuleInterop"    : true,
            "resolveJsonModule"  : true,
            "skipLibCheck"       : true,
            "typeRoots"        : [
                  "node_modules/@types",
                  "src/.types"
            ],
            "baseUrl"            : "src",
            "paths"              : {
                  "~/*"           : ["*"]
            }
      },

      "include": ["src", "src/.vault.ts"]
}